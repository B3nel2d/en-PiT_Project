<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="717dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
            android:id="@+id/returnbuttun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"
            android:onClick="returnTapped"
            app:fontFamily="@font/pomeranian"
            android:text="もどる"
            android:background="#0095d5"
            android:textColor="@color/zxing_status_text"  />

        <TextView
            android:id="@+id/contentName"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center|center_vertical"
            android:scaleX="2"
            android:scaleY="2"
            android:textSize="30sp"
            android:textStyle="bold"
            app:fontFamily="@font/pomeranian"
            tools:text="NAME" />

        <TextView
            android:id="@+id/contentFamily"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center_horizontal"
            android:text="TextView"
            android:textSize="30sp"
            app:fontFamily="@font/pomeranian"
            tools:text="FAMILY" />

        <ImageView
            android:id="@+id/contentImage"
            android:layout_width="match_parent"
            android:layout_height="151dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/sakana_fish_27220" />

        <TextView
            android:id="@+id/contentSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center_vertical"
            android:text="SIZE"
            android:textSize="30sp"
            app:fontFamily="@font/pomeranian" />

        <TextView
            android:id="@+id/contentDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="TextView"
            android:textSize="30sp"
            app:fontFamily="@font/pomeranian"
            tools:text="DESCRIPTION" />

    </LinearLayout>

</LinearLayout>
